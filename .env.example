# 环境变量配置示例
# 复制为 .env 并根据需要修改

# 开发设置
ENVIRONMENT=development
DEBUG=true

# 数据路径配置
FINRA_DATA_PATH=datas/margin-statistics.csv
VIX_DATA_PATH=datas/VIX_History.csv

# 数据库配置
CACHE_DB_PATH=data/cache/market_data.db
USE_CACHE=true
CACHE_EXPIRY_HOURS=24

# API配置（全部使用免费数据源，无需API密钥）
YAHOO_FINANCE_TIMEOUT=30
FRED_REQUEST_DELAY=1.0

# 分析配置
LEVERAGE_RISK_THRESHOLD=0.75
FRAGILITY_BUBBLE_THRESHOLD=3.0
FRAGILITY_PANIC_THRESHOLD=-3.0
ZSCORE_WINDOW_MONTHS=60

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 性能配置
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=60

# 可视化配置
CHART_WIDTH=1200
CHART_HEIGHT=600
DEFAULT_THEME=plotly_white